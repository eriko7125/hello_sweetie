<div class="row">
  <div class="col-4 offset-4">
    <h1>ユーザー登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <table>
        <tr>
          <td>
            <div class="field">
            <%= f.label :氏名 %><br>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
          </td>
          <td>
          <div class="field">
            <%= f.label :　 %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="field">
              <%= f.label :フリガナ %><br>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
          </td>
          <td>
            <div class="field">
              <%= f.label :　 %><br>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </td>
        </tr>
      </table>

      <div class="field">
        <%= f.label :郵便番号 %><br>
        <%= f.text_field :zipcode, autofocus: true, autocomplete: "zipcode", placeholder:"半角英数字 ハイフン不要" %>
      </div>
      <div class="field">
        <%= f.label :住所 %><br>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"42" %>
      </div>
      <div class="field">
        <%= f.label :電話番号 %><br>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder:"半角英数字 ハイフン不要", :size=>"42" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"半角英数字 6文字以上" %>
      </div>

      <div class="field">
        <%= f.label :※パスワード再入力 %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"上記と同じパスワード" %>
      </div>
      
      <br>
      <div class="actions">
        <%= f.submit "上記内容で会員登録する", class: "btn btn-primary devise-btn" %>
      </div>
    <% end %>

    <br>
    <span>登録がお済みの方は→<%= render "end_users/shared/links" %></span>
  </div>
</div>