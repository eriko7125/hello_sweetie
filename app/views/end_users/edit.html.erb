<div class="row">
  <div class="col-6 offset-3">
    <h1>登録情報編集　<%= link_to '退会する', confirm_end_users_path, class:"btn btn-warning" %></h1>
  </div>
</div>

<%= form_for(@end_user) do |f| %>
  <div class="row">
    <div class="col-6 offset-3">
      <table class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :zipcode, placeholder:"半角英数字 ハイフン不要" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: 40 %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number, placeholder:"半角英数字 ハイフン不要" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, size: 40 %></td>
        </tr>
      </table>
      
      <%= f.submit '編集内容を保存する',class: "btn btn-primary devise-btn" %>
    </div>
  </div>
<% end %>
