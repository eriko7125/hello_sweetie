<ul class="nav navbar">
  <li><%= link_to "全てのアイテム", items_path %></li>
  <% @genres.each do |genre|%>
    <%= link_to genre_path(genre.id) do %>
    <li><%= genre.name %></li>
    <% end %>
  <% end %>
</ul>

<div class="row">
  <div class="col-12">
    <h1>全てのアイテム　<small>〜全 <%= @items.count %> 件〜</small></h1>
  </div>
</div>

<%# 販売ステータスが「販売中」の場合、商品画像大きめ、価格の表示あり %>
<div class="row">
  <% @items.each do |item|%>
    <div class="col-3">
      <% if item.status == "販売中"%>
          <%= link_to item_path(item) do%>
            <%= attachment_image_tag item, :image, :fill, 200, 200, format: "jpeg" %>
            <p><%= item.name %></p>
            <p><%= item.price %></p>
          <% end %>

      <%# 販売ステータスが「販売停止中」の場合、商品画像小さめ、販売停止中と表示 %>
      <% else item.status == "販売停止中"%>
        <%= link_to item_path(item) do%>
          <%= attachment_image_tag item, :image, :fill, 100, 100, format: "jpeg" %>
          <p class="small"><%= item.name %>
          <br>※<%= item.status %></p>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= paginate @items %>
</div>