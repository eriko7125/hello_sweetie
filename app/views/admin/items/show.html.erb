<div class="row">
  <div class="col-10 offset-1">
    <h1>アイテム詳細</h1>
  </div>
</div>

<div class="row">
  <div class="col-5 offset-1">
    <div class="field">
      <label for="item_image">Image</label>
      <%= attachment_image_tag @item, :image, :fill, 400, 400, format: "jpeg" %>
    </div>
  </div>
  <div class="col-5">
    <table class="table table-borderless">
      <tr>
        <th width="150"><label>商品名</label></th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th><label>商品説明</label></th>
        <td><%= simple_format(@item.caption) %></td>
      </tr>
      <tr>
        <th><label>ジャンル</label></th>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <th><label>販売価格</label></th>
        <td><%= converting_to_jpy(@item.price) %></td>
      </tr>
      <tr>
        <th><label>販売ステータス</label></th>
        <td><%= @item.status %></td>
      </tr>
    </table>
    <p><%= link_to "編集する", edit_admin_item_path(@item), class: "col-3 btn btn-primary mx-auto d-block" %></p>
    <p class="text-center"><%= link_to "戻る", admin_items_path %></p>
  </div>
</div>