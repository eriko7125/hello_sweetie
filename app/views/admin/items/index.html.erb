<div class="row">
  <div class="col-10 offset-1">
    <h1>アイテム一覧</h1>
  </div>
</div>

<div class="row">
  <div class="col-10 offset-1">
    <table class="table table-bordered">
      <thead class="thead-light">
      <tr>
        <th>Image</th>
        <th>アイテム名</th>
        <th>ジャンル</th>
        <th>税込価格</th>
        <th width="140">販売ステータス</th>
        <th width="180"></th>
      </tr>
      </thead>
      <% @items.each do |item| %>
        <tr>
          <td><%= attachment_image_tag item, :image, :fill, 60, 40, format: 'jpeg' %></td>
          <td><%= item.name %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.price %></td>
          <td><%= item.status %></td>
          <td><%= link_to "詳細", admin_item_path(item.id), class: "btn btn-primary" %>
          <%= link_to "編集する", edit_admin_item_path(item.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>