<div class="row">
  <div class="col-12">
    <h1>アイテム一覧</h1>
    <%= link_to "アイテムを追加する", new_admin_item_path, class: "btn btn-primary mb-2" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table table-bordered">
      <thead class="thead-light">
      <tr>
        <th>Image</th>
        <th>アイテム名</th>
        <th>ジャンル</th>
        <th>販売価格</th>
        <th width="140">販売ステータス</th>
        <th width="180"></th>
      </tr>
      </thead>
      <% @items.each do |item| %>
        <tr>
          <td><%= attachment_image_tag item, :image, :fill, 60, 40, format: 'jpeg' %></td>
          <td class="align-middle"><%= item.name %></td>
          <td class="align-middle"><%= item.genre.name %></td>
          <td class="align-middle"><%= converting_to_jpy(item.price) %></td>
          <td class="align-middle"><%= item.status %></td>
          <td><%= link_to "詳細", admin_item_path(item.id), class: "btn btn-primary" %>
          <%= link_to "編集する", edit_admin_item_path(item.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>