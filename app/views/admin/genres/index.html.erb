<div class="row">
  <div class="col-6 offset-3">
    <h1>ジャンル追加</h1>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-3">
    <%= form_for @genre, url: admin_genres_path do |f| %>
      <span class="genre_name">ジャンル</span>
      <%= f.text_field :name, class: "mr-2" %>
      <%= f.radio_button :status, :有効 %>
      <%= f.label "有効", class: "mr-2" %>
      <%= f.radio_button :status, :無効 %>
      <%= f.label "無効" %>
      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-3">
    <h1>ジャンル一覧</h1>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-3">
    <table class="table table-bordered">
      <thead class="thead-light">
      <tr>
      <th>ジャンル</th>
      <th>利用状態</th>
      <th></th>
      </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tr>
        <td><%= genre.name %></td>
        <td><%= genre.status %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>