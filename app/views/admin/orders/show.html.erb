<div class="row">
  <div class="col-12">
    <h1>注文詳細</h1>
  </div>
</div>

<div class="row">
  <div class="col-7">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th width="150">購入者</th>
            <td><%= @order.end_user.last_name %> <%= @order.end_user.first_name %> 様</td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒 <%= @order.zipcode %>　<%= @order.address %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= @order.name %> 様</td>
          </tr>
          <tr>
            <th class="align-middle">注文ステータス</th>
            <td><%= form_for(@order, url:admin_order_path(@order), method: :patch) do |f| %>
              <%= f.select :status, [["入金待ち"], ["入金確認"],["製作中"],["発送準備中"],["発送済み"]] %>
              <%= f.submit "更新", class: "btn btn-primary" %>
            <% end %></td>
          </tr>
        </tbody>
      </table>
  </div>

  <div class="col-3 offset-2">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>商品合計</th>
          <td><%= converting_to_jpy(@order.sum_price) %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= converting_to_jpy_notax(@order.shipping_price) %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td><%= converting_to_jpy(@order.payment_price) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>商品名</th>
          <th>生地</th>
          <th>リボン</th>
          <th>販売価格</th>
          <th>製作ステータス</th>
        </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item_name %></td>
            <td><%= order_detail.material_name %></td>
            <td><%= order_detail.ribbon_color %></td>
            <td><%= converting_to_jpy(order_detail.price) %></td>
            <td><%= form_for(order_detail, url:admin_order_production_path(order_detail, order_id: @order.id), method: :patch) do |f| %>
              <%= f.select :production_status, [["着手不可"], ["製作待ち"], ["製作中"], ["製作完了"]] %>
              <%= f.submit "更新", class: "btn btn-primary" %>
            <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>